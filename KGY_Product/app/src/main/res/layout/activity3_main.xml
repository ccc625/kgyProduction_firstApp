<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#c196d2"
    android:layout_height="match_parent">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/imageView1"
        android:src="@drawable/mainlogo"/>


    <Spinner
        android:layout_marginLeft="60dp"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:id="@+id/spinner1"
        android:entries="@array/drink"
        android:layout_marginStart="27dp"
        android:layout_marginTop="53dp"

        android:layout_below="@+id/imageView1"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_marginRight="45dp"
        android:entries="@array/number"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:id="@+id/spinner2"
        android:layout_alignBaseline="@+id/spinner1"
        android:layout_alignBottom="@+id/spinner1"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="45dp" />

    <TextView
        android:layout_marginLeft="45dp"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="현재 얼마나 먹엇나요?"
        android:layout_marginBottom="11dp"
        android:layout_above="@+id/spinner2"
        android:layout_alignEnd="@+id/spinner1" />

    <TextView
        android:layout_marginLeft="45dp"
        android:text="우리팀은 한 마디로?"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:id="@+id/textView9"
        android:layout_below="@+id/spinner1"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/EditText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView9"
        android:layout_marginTop="32dp"
        android:layout_alignStart="@+id/spinner1"
        android:layout_alignEnd="@+id/spinner2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/girl"
        android:layout_alignStart="@+id/EditText1"
        android:layout_marginTop="21dp"
        android:layout_alignEnd="@+id/EditText1" />

    <TextView
        android:id="@+id/girl"
        android:layout_marginLeft="45dp"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/EditText1"
        />

    <Button

        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button9"
        android:layout_alignBaseline="@+id/button4"
        android:layout_alignBottom="@+id/button4"
        android:layout_alignStart="@+id/spinner2"
        android:layout_marginStart="20dp" />

    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="19dp"
        android:id="@+id/button4"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/spinner1" />
</RelativeLayout>