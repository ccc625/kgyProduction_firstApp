<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_team_match"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#c196d2"
    tools:context="com.example.kgy_product.TeamMatchActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_margin="15dp">

        <ImageButton
            android:src="@drawable/search"
            android:id="@+id/ImageButton1"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <EditText
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:id="@+id/editText"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp" />

        <Button
            android:text="Button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/btnNext"
            android:layout_alignTop="@+id/editText"
            android:layout_toEndOf="@+id/editText" />
    </LinearLayout>

    <RelativeLayout
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/imgMan1"
                android:src="@drawable/man" />

            <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/imgMan2"
                android:src="@drawable/man" />

            <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/imgMan3"
                android:src="@drawable/man" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/imgWoman1"
                android:src="@drawable/woman" />

            <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/imgWoman2"
                android:src="@drawable/woman" />

            <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/imgWoman3"
                android:src="@drawable/woman" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
